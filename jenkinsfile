pipeline {
    agent any 

    stages {
        stage('Check') { 
            steps { 
                sh './gradlew clean check' 
                stash includes: './build/*', name: 'build'
            }
        }
        stage('Test'){
            steps {
                unstash 'build'
                junit 'build/test-results/*.xml' 
            }
        }
        stage('Archive'){
            steps {
                unstash 'build'
                archiveArtifacts artifacts: 'build/**/*.war', fingerprint: true, onlyIfSuccessful: true
            }
        }
    }
}
